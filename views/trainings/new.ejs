<%- include('../partials/header') %>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="bi bi-plus-circle"></i> Dodaj nowy trening
                </h4>
            </div>
            <div class="card-body">
                <form method="POST" action="/trainings" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="name" class="form-label">Nazwa treningu *</label>
                                <input type="text" class="form-control" id="name" name="name" required
                                       value="<%= training.name %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="type" class="form-label">Typ treningu *</label>
                                <select class="form-select" id="type" name="type" required>
                                    <option value="">Wybierz typ</option>
                                    <option value="Cardio" <%= training.type === 'Cardio' ? 'selected' : '' %>>Cardio</option>
                                    <option value="Siła" <%= training.type === 'Siła' ? 'selected' : '' %>>Siła</option>
                                    <option value="Joga" <%= training.type === 'Joga' ? 'selected' : '' %>>Joga</option>
                                    <option value="Pilates" <%= training.type === 'Pilates' ? 'selected' : '' %>>Pilates</option>
                                    <option value="Crossfit" <%= training.type === 'Crossfit' ? 'selected' : '' %>>Crossfit</option>
                                    <option value="Bieganie" <%= training.type === 'Bieganie' ? 'selected' : '' %>>Bieganie</option>
                                    <option value="Pływanie" <%= training.type === 'Pływanie' ? 'selected' : '' %>>Pływanie</option>
                                    <option value="Inne" <%= training.type === 'Inne' ? 'selected' : '' %>>Inne</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="intensity" class="form-label">Intensywność (1-10) *</label>
                                <input type="range" class="form-range" id="intensity" name="intensity" 
                                       min="1" max="10" value="<%= training.intensity %>" 
                                       oninput="document.getElementById('intensityValue').textContent = this.value">
                                <div class="text-center">
                                    <span class="badge bg-primary" id="intensityValue"><%= training.intensity %></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="duration" class="form-label">Czas trwania (minuty) *</label>
                                <input type="number" class="form-control" id="duration" name="duration" required
                                       min="1" max="600" value="<%= training.duration %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="date" class="form-label">Data treningu *</label>
                                <input type="date" class="form-control" id="date" name="date" required
                                       value="<%= training.date %>">
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Opis treningu</label>
                        <textarea class="form-control" id="description" name="description" 
                                  rows="3" placeholder="Opcjonalny opis treningu..."><%= training.description %></textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/trainings" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Powrót
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Dodaj trening
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 